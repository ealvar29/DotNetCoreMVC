@model IEnumerable<MVCDotNet5.Models.Product>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-action="Upsert" class="btn btn-primary">
			<i class="fas fa-plus"></i>	Add New Product
			</a>
		</div>
	</div>
	<br /> <br />
	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width: 100%">
			<thead>
				<tr>
					<th>
						Product Name
					</th>
					<th>
						Prices
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td width="50%">@category.Name</td>
						<td width="30%">@category.Price</td>
						<td class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-route-Id="@category.Id" asp-action="Upsert" class="btn btn-primary mx-2">
								<i class="fas fa-edit"></i>	Edit
								</a>
								<a asp-route-Id="@category.Id" asp-action="Delete" class="btn btn-danger mx-2">
								<i class="fas fa-trash-alt"></i>	Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	} else
	{
		<p>No Products to show</p>
	}
</div>

